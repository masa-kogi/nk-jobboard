<body class="bg-gray-100 font-family-karla flex overflow-y-auto">
  <%= render partial: "recruiters/shared/aside" %>
    <div class="relative w-full flex flex-col content-offset">
      <%= render partial: "recruiters/shared/header" %>
      <div class="w-full border-t flex flex-col">
        <main class="w-full p-6">
          <h1 class="w-full text-3xl text-black sticky top-12 z-10 bg-gray-100 mb-6 pb-8">新規求人作成確認画面</h1>
          <div class="flex justify-center items-center w-full mt-6 pl-0 lg:pl-2">
            <div class="leading-loose w-2/3">
              <%= render partial: "content" %>
              <div class="flex justify-between mt-8 p-2 w-full">
                <%= link_to "入力画面に戻る", new_recruiter_job_path, class: "btn flex bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-4 rounded" %>
                <%= form_with model: @job, url: recruiter_jobs_path do |f| %>
                  <%= f.submit "作成する", class: "btn flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded" %>
                <% end %>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
    <%= javascript_include_tag "recruiters/new", defer: true %>

</body>
