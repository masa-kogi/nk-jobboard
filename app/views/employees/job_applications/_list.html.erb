<table id="job-list" class="min-w-full leading-normal">
  <thead class="">
    <tr>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-employee-thead">
        求人番号
      </th>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-employee-thead">
        求人タイトル
      </th>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-employee-thead">
        職種
      </th>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-employee-thead">
        部門
      </th>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-employee-thead">
        ステータス
      </th>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-employee-thead">
        応募日
      </th>
    </tr>
  </thead>
  <tbody>
    <% jobs.each do |job| %>
    <tr>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
          <%= job.id %>
        </p>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
          <%= link_to job.title, employee_job_application_path(current_employee, job_application_for_current_employee(job)), class: "custom-link" %>
        </p>
      </td>
      </td>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
            <%= job.category.name %>
        </p>
      </td>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
            <%= job.department.path.map(&:name).join %>
        </p>
      </td>
      <td class="px-4 py-2 border-b border-gray-200 bg-white text-sm">
        <span
          class="relative inline-block px-3 py-1 font-semibold leading-tight">
          <span aria-hidden
              class="absolute inset-0 opacity-50 rounded-full <%= application_status_color(@application_statuses[job.id]) %>"></span>
          <span class="relative"><%= @application_statuses[job.id] %></span>
        </span>
      </td>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
            <%= @application_dates[job.id]&.strftime("%Y-%m-%d") || "N/A" %>
        </p>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
