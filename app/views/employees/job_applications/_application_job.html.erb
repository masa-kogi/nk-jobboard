<table id="job-list" class="min-w-full leading-normal">
  <thead class="">
    <tr>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        求人番号
      </th>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        求人タイトル
      </th>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        職種
      </th>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        部門
      </th>
      <th
        class="px-3 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        公開日
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
          <%= @job.id %>
        </p>
      </td>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
          <%= link_to @job.title, job_path(@job), class: "custom-link" %>
        </p>
      </td>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
            <%= @job.category.name %>
        </p>
      </td>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
          <%= @job.department.path.map(&:name).join %>
        </p>
      </td>
      <td class="px-3 py-3 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
          <%= @job.job_status_maps.order(created_at: :desc).first.job_status.created_at.strftime("%Y-%m-%d") %>
        </p>
      </td>
    </tr>
  </tbody>
</table>
