<aside class="relative bg-sidebar w-1/6 hidden sm:block shadow-xl overflow-y-auto h-screen position-fixed flex flex-col items-center">
  <div class="p-6 w-full flex justify-center">
    <%= link_to jobs_path, class: "flex title-font font-medium items-center text-gray-900" do %>
      <%= image_tag 'logo.png', class: 'w-16 h-16 rounded-full' %>
    <% end %>
  </div>
  <nav class="text-white text-base font-semibold w-full flex flex-col items-center">
    <div class="">
      <%= link_to "#すべての求人", jobs_path, data: { department_id: '' }, class: 'block px-4 py-2 mt-2 department-link' %>
      <% @root_departments.each do |department| %>
        <%= link_to department.name, jobs_path(department: department.id), data: { department_id: department.id }, class: 'block px-4 py-2 mt-2 department-link' %>
      <% end %>
    </div>
  </nav>
</aside>
