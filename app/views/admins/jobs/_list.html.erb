<table id="job-list" class="min-w-full leading-normal">
  <thead class="">
    <tr>
      <th
        class="px-3 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-admin-thead">
        求人番号
      </th>
      <th
        class="px-3 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-admin-thead">
        求人タイトル
      </th>
      <th
        class="px-3 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-admin-thead">
        職種
      </th>
      <th
        class="px-3 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-admin-thead">
        部門
      </th>
      <th
        class="px-3 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-admin-thead">
        ステータス
      </th>
      <th
        class="px-3 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-admin-thead">
        公開日
      </th>
      <th
        class="px-3 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider sticky-admin-thead">
        応募者数
      </th>
    </tr>
  </thead>
  <tbody>
    <% jobs.each do |job| %>
    <tr>
      <td class="px-3 py-2 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
          <%= job.id %>
        </p>
      </td>
      <td class="px-3 py-2 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
          <%= link_to job.title, admin_job_path(current_admin, job), class: "custom-link" %>
        </p>
      </td>
      <td class="px-3 py-2 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
            <%= job.category.name %>
        </p>
      </td>
      <td class="px-3 py-2 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
            <%= job.department.path.map(&:name).join %>
        </p>
      </td>
      <td class="px-3 py-2 border-b border-gray-200 bg-white text-sm">
        <span
          class="relative inline-block px-3 py-1 font-semibold leading-tight">
          <span aria-hidden
              class="absolute inset-0 opacity-50 rounded-full"></span>
          <span class="relative"><%= job.current_status.name %></span>
        </span>
      </td>
      <td class="px-3 py-2 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap">
            <%= job.job_status_maps.order(created_at: :desc).first.job_status.created_at.strftime("%Y-%m-%d") %>
        </p>
      </td>
      <td class="px-3 py-2 border-b border-gray-200 bg-white text-sm">
        <p class="whitespace-no-wrap">
          <%= link_to job.job_applications.count, job_applicants_path(job), class: "custom-link"%>
        </p>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
