<form class="mx-auto m-4 p-10 bg-white rounded shadow-xl">
  <div class="mt-8">
    <%= f.label :application_status, "応募状況", class: "block text-sm text-gray-600" %>
    <%= f.collection_select :application_status_id, @application_statuses || [], :id, :name, { prompt: '選択してください', selected: job_application.current_status.id }, class: "w-1/4 px-2 py-2 text-gray-700 bg-gray-200 rounded" %>
    <% if @job.errors.include?(:application_status) %>
      <% @job.errors.full_messages_for(:application_status).each do |message| %>
        <p class="text-red-500"><%= message %></p>
      <% end %>
    <% end %>
  </div>
  <div class="mt-8 mb-12 w-full flex justify-between">
    <%= link_to "応募者一覧に戻る", job_applicants_path, class: "px-4 py-2 btn bg-gray-300 hover:bg-gray-40 rounded" %>
    <%= f.submit "ステータスを更新する", class: "btn text-white bg-indigo-500 border-0 py-2 px-4 focus:outline-none hover:bg-indigo-600 rounded text-lg"%>
  </div>
</form>
