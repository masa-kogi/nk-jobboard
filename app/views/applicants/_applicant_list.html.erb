<table id="applicants-list" class="min-w-full leading-normal">
  <thead class="">
    <tr>
      <th
        class="px-4 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        応募番号
      </th>
      <th
        class="px-4 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        応募者名
      </th>
      <th
        class="px-4 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        所属部門
      </th>
      <th
        class="px-4 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        応募日
      </th>
      <th
        class="px-4 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
        ステータス
      </th>
    </tr>
  </thead>
  <tbody>
    <% applicants.each do |applicant| %>
      <% job_application = applicant.job_applications.find_by(job_id: @job.id) %>
      <tr>
        <td class="px-4 py-2 border-b border-gray-200 bg-white text-sm">
          <p class="text-gray-900 whitespace-no-wrap">
            <%= applicant.id %>
          </p>
        </td>
        <td class="px-4 py-2 border-b border-gray-200 bg-white text-sm">
          <p class="text-gray-900 whitespace-no-wrap">
            <%= link_to applicant.full_name, job_applicant_path(job.id, applicant.id), class: "custom-link"%>
          </p>
        </td>
        <td class="px-4 py-2 border-b border-gray-200 bg-white text-sm">
          <p class="text-gray-900 whitespace-no-wrap">
            <%= applicant.department.path.map(&:name).join %>
          </p>
        </td>
        <td class="px-4 py-2 border-b border-gray-200 bg-white text-sm">
          <p class="text-gray-900 whitespace-no-wrap">
            <%= job_application&.created_at&.strftime("%Y-%m-%d") %>
          </p>
        </td>
        <td class="px-4 py-2 border-b border-gray-200 bg-white text-sm">
        <span
          class="relative inline-block px-3 py-1 font-semibold leading-tight">
          <span aria-hidden
              class="absolute inset-0 opacity-50 rounded-full"></span>
          <span class="relative"><%= job_application&.current_status.name %></span>
        </span>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
