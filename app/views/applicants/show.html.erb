<body class="bg-gray-100 font-family-karla flex overflow-y-auto">
  <% if admin_signed_in? %>
    <%= render partial: "admins/shared/aside" %>
  <% elsif recruiter_signed_in? %>
    <%= render partial: "recruiters/shared/aside" %>
  <% end %>
    <div class="relative w-full flex flex-col content-offset">
      <% if admin_signed_in? %>
        <%= render partial: "admins/shared/header" %>
      <% elsif recruiter_signed_in? %>
        <%= render partial: "recruiters/shared/header" %>
      <% end %>
      <div class="w-full border-t flex flex-col">
        <main class="w-full p-6">
          <h1 class="w-full text-3xl text-black sticky top-12 z-10 bg-gray-100 mb-6 pb-8">応募者詳細画面</h1>
          <div>
            <%= render partial: 'job_card', locals: { job: @job } %>
          </div>
          <div class="flex justify-center items-center w-full mt-6 pl-0 lg:pl-2">
            <div class="leading-loose w-2/3">
              <%= render partial: "content", locals: { applicant: @applicant, job_application: @job_application } %>
              <%= render partial: "current_application_status", locals: { job_application: @job_application } %>
              <% if admin_signed_in? %>
              <div class="mt-8 mb-12 w-full flex justify-center">
                <%= link_to "応募者一覧に戻る", job_applicants_path, class: "px-4 py-2 btn bg-gray-300 hover:bg-gray-40 rounded" %>
              </div>
              <% elsif recruiter_signed_in? %>
                <div class="mt-8 mb-12 w-full flex justify-between">
                  <%= link_to "応募者一覧に戻る", job_applicants_path, class: "px-4 py-2 btn bg-gray-300 hover:bg-gray-40 rounded" %>
                  <%= link_to "ステータス更新画面に進む", edit_job_applicant_path, class: "btn text-white bg-indigo-500 border-0 py-2 px-4 focus:outline-none hover:bg-indigo-600 rounded text-lg"%>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      </main>
    </div>
  </div>

</body>
